{
    "type": "Sequence",
    "height": "80vh",
    "scrollDirection": "vertical",
    "paddingLeft": "@marginLeft",
    "paddingRight": "@marginRight",
    "-fastScrollScale": 0.5,
    "data": "${listData}",
    "numbered": true,
    "bind": [
        {
            "name": "booleanValue",
            "type": "boolean",
            "value": false
        },
        {
            "name": "booleanValueAsStringWithExpression",
            "type": "boolean",
            "value": "${false}"
        },
        {
            "name": "booleanValueAsNumber",
            "type": "boolean",
            "value": 1
        },
        {
            "name": "booleanValueAsNull",
            "type": "boolean",
            "value": null
        }
    ],
    "handleTick": [
        {
            "minimumDelay": 15000,
            "description": "Every 15 seconds just go back to red to annoy folks",
            "commands": [
                {
                    "type": "SetValue",
                    "property": "CurrentIndex",
                    "value": 0
                }
            ]
        }
    ],
    "handleKeyDown": [
        {
            "when": "${event.keyboard.code == 'KeyW'}",
            "commands": [
                {
                    "type": "SetValue",
                    "property": "y",
                    "value": "${y - 10}"
                },
                {
                    "type": "SetValue",
                    "property": "transform",
                    "value": [ { "translateX": "${x}", "translateY": "${y}" } ]
                }
            ]
        },
        {
            "when": "${event.keyboard.code == 'KeyS'}",
            "commands": [
                {
                    "type": "SetValue",
                    "property": "y",
                    "value": "${y + 10}"
                },
                {
                    "type": "SetValue",
                    "property": "transform",
                    "value": [ { "translateX": "${x}", "translateY": "${y}" } ]
                }
            ]
        },
        {
            "when": "${event.keyboard.code == 'KeyA'}",
            "commands": [
                {
                    "type": "SetValue",
                    "property": "x",
                    "value": "${x - 10}"
                },
                {
                    "type": "SetValue",
                    "property": "transform",
                    "value": [ { "translateX": "${x}", "translateY": "${y}" } ]
                }
            ]
        },
        {
            "when": "${event.keyboard.code == 'KeyD'}",
            "commands": [
                {
                    "type": "SetValue",
                    "property": "x",
                    "value": "${x + 10}"
                },
                {
                    "type": "SetValue",
                    "property": "transform",
                    "value": [ { "translateX": "${x}", "translateY": "${y}" } ]
                }
            ]
        },
        {
            "when": "${event.keyboard.code == 'Enter'}",
            "description": "Block the normal 'enter' behavior"
        }
    ],
    "actions": [
        {
            "name": "activate",
            "label": "Reply to user",
            "enabled": true,
            "commands": [
                {
                    "type": "SendEvent",
                    "arguments": "Activated by action invocation"
                },
                {
                    "type": "SendEvent",
                    "arguments": "Reply"
                }
            ]
        },
        {
            "name": "thumbsup",
            "label": "Mark positively",
            "command": {
                "type": "SetValue",
                "property": "Rating",
                "value": 1
            }
        }
    ],
    "role": "list",
    "items": [
        {
            "type": "Sequence",
            "scaling": 1
        },
        {
            "type": "Text",
            "scaling": 1.2
        }
    ],
    "preserve": [ "centerId", "centerIndex", "firstId", "firstIndex", "scrollOffset", "scrollPercent", "Counter" ],
    "nextFocusDown": "componentId1",
    "nextFocusForward": "componentId2",
    "nextFocusLeft": "componentId3",
    "nextFocusRight": "componentId4",
    "nextFocusUp": "componentId5",
    "snap": "none",
    "layoutDirection": "RTL"
}
