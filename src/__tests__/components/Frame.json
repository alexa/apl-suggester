{
    "type": "Frame",
    "background": "rgba(0,0,0,0)",
    "borderColor": "rgba(0,0,0,0)",
    "borderRadius": 0,
    "borderStrokeWidth": 10,
    "borderWidth": 100,
    "borderTopLeftRadius": 0,
    "borderTopRightRadius": 10,
    "borderBottomLeftRadius": 23,
    "borderBottomRightRadius": 78,
    "id": "myFrame",
    "style": "mystyle",
    "handleTick": [
        {
            "minimumDelay": 15000,
            "description": "Every 15 seconds just go back to red to annoy folks",
            "commands": [
                {
                    "type": "SetValue",
                    "property": "CurrentIndex",
                    "value": 0
                }
            ]
        }
    ],
    "width": 10,
    "bind": [
        {
            "name": "booleanValue",
            "type": "boolean",
            "value": false
        },
        {
            "name": "booleanValueAsStringWithExpression",
            "type": "boolean",
            "value": "${false}"
        },
        {
            "name": "booleanValueAsNumber",
            "type": "boolean",
            "value": 1
        },
        {
            "name": "booleanValueAsNull",
            "type": "boolean",
            "value": null
        }
    ],
    "actions": [
        {
            "name": "activate",
            "label": "Reply to user",
            "commands": [
                {
                    "type": "SendEvent",
                    "arguments": "Activated by action invocation"
                },
                {
                    "type": "SendEvent",
                    "arguments": "Reply"
                }
            ]
        },
        {
            "name": "thumbsup",
            "label": "Mark positively",
            "enabled": true,
            "command": {
                "type": "SetValue",
                "property": "Rating",
                "value": 1
            }
        }
    ],
    "role": "progressbar",
    "padding": [10, 20],
    "paddingBottom": 40,
    "paddingStart": 10,
    "paddingEnd": "20dp",
    "preserve": [ "checked", "Counter" ],
    "layoutDirection": "RTL"
}
