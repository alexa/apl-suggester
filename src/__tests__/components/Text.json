{
    "type": "Text",
    "text": "${ordinal}",
    "paddingBottom": "20dp",
    "bind": [
        {
            "name": "booleanValue",
            "type": "boolean",
            "value": false
        },
        {
            "name": "booleanValueAsStringWithExpression",
            "type": "boolean",
            "value": "${false}"
        },
        {
            "name": "booleanValueAsNumber",
            "type": "boolean",
            "value": 1
        },
        {
            "name": "booleanValueAsNull",
            "type": "boolean",
            "value": null
        }
    ],
    "handleTick": [
        {
            "minimumDelay": 15000,
            "description": "Every 15 seconds just go back to red to annoy folks",
            "commands": [
                {
                    "type": "SetValue",
                    "property": "CurrentIndex",
                    "value": 0
                }
            ]
        }
    ],
    "actions": [
        {
            "name": "activate",
            "label": "Reply to user",
            "enabled": true,
            "commands": [
                {
                    "type": "SendEvent",
                    "arguments": "Activated by action invocation"
                },
                {
                    "type": "SendEvent",
                    "arguments": "Reply"
                }
            ]
        },
        {
            "name": "thumbsup",
            "label": "Mark positively",
            "command": {
                "type": "SetValue",
                "property": "Rating",
                "value": 1
            }
        }
    ],
    "role": "text",
    "color": "white",
    "padding": "20vw",
    "paddingTop": "20dp",
    "paddingStart": 10,
    "paddingEnd": "20dp",
    "preserve": [ "checked", "Counter" ],
    "lang": "en-US",
    "textAlign": "start",
    "layoutDirection": "RTL"
}
